<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF31c270"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA">

            <EditText
                android:id="@+id/skill_edit_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="主题..."
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:gravity="top|left"
                android:maxLines="1"
                android:background="@android:color/white"/>

            <EditText
                android:id="@+id/skill_edit_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:hint="来写些什么吧..."
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:gravity="top|left"
                android:maxLines="3"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_room"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    />

                <!--所在位置-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:id="@+id/skill_edit_addressText"
                    android:text="广州市"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <!--添加图片-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/skill_addImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add_black_float_24dp"
                android:layout_margin="15dp"
                android:background="@android:color/white"/>

            <ImageView
                android:id="@+id/skill_edit_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>


        </LinearLayout>

        <!--求技能-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="你帮助了Ta，希望能得到的回报是："
                />

            <EditText
                android:id="@+id/skill_edit_extra"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/skill_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="提   交"
            android:textColor="#fff"
            android:textSize="21sp"
            android:background="#8FBC8F"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />




    </LinearLayout>

</LinearLayout>