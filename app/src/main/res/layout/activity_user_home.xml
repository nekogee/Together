<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@color/colorPrimary"
        android:layout_marginTop="?attr/actionBarSize"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/UserPicture"
            android:background="@drawable/pic2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nekogee"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="5dp"
                android:id="@+id/userName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="我的个性签名"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:id="@+id/userDescription"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#EAEAEA" >


        <LinearLayout
            android:id="@+id/tab_1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_face_black_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="个人主页" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="我的心愿" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_lightbulb_outline_black_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:text="我的技能" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_account_box_black_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="个人信息" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_5"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_settings_black_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.82"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/v" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/linearlayout_boder"
            android:orientation="horizontal" >


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>


